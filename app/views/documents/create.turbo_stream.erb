<turbo-stream action="replace" target="upload_document">
  <template>
    <%= render partial: "documents/form", locals: { model: Document.new }, formats: [:html] %>
  </template>
</turbo-stream>

<turbo-stream action="prepend" target="documents_list">
  <template>
    <%= render partial: "documents/document", locals: { document: @document }, formats: [:html] %>
  </template>
</turbo-stream>

<%= turbo_stream.replace "flash_messages", partial: "layouts/flash_messages" %>
